BoxLayout:
    # set background color
    canvas.before:
        Color: 
            rgba: (21/255, 22/255, 30/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    
    spacing: 10
    orientation: 'vertical'

    BoxLayout:
        size_hint_y: None
        height: 50

        Button:
            text: "Menu"
            size_hint_x: None
            background_color: (228/255, 168/255, 55/255, 0)

            canvas.before:
                # add background color
                Color:
                    rgba: (228/255, 168/255, 55/255, 1)
                
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]
        Label:
            text: "My App Header"
        
        TextInput:
            hint_text: "Search"
            multiline: False
            size_hint_x: None
            size_hint_y: .8
            padding: (0, 10)
            font_size: '14dp'
            background_color: 0, 0, 0, 0
            cursor_color: (228/255, 168/255, 55/255, 1)
            canvas.before:
                Color:
                    rgba: (228/255, 168/255, 55/255, 1)
            canvas.after:
                Color:
                    rgba: (228/255, 168/255, 55/255, 1)
                Line:
                    points: self.pos[0], self.pos[1], self.pos[0]
                    
    BoxLayout:
        StackLayout:
            size_hint: .4, 1
            spacing: 5
            canvas.before:
                Color:
                    rgba: (21/255, 22/255, 30/255, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            Button:
                text: "Page 1"
                size_hint: 1, None
                height: 40
                background_color: (228/255, 168/255, 55/255, 0)
                canvas.before:
                    Color:
                        rgba: (48/255, 49/255, 54/255, .5)

                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [10]
            Button:
                text: "Page 2"
                size_hint: 1, None
                height: 40
                background_color: (228/255, 168/255, 55/255, 0)
                canvas.before:
                    Color:
                        rgba: (48/255, 49/255, 54/255, .5)

                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [10]
        
        BoxLayout:
            PageLayout:
                BoxLayout:
                    orientation: 'vertical'
                    AsyncImage:
                        source: './img/developers.jpg'
